    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variants"
    },
    "color": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::color.color",
      "inversedBy": "variants"
    },
    "size": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::size.size",
      "inversedBy": "variants"
    }
  }
}
